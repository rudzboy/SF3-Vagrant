{% extends 'RudzFreshBundle::layout.html.twig' %}

{% block title %}{{ parent() }} - Homepage{% endblock %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <div id="welcome">
                <h1><span>Welcome to Symfony</span> on your Fresh homepage.</h1>
            </div>
            
            <div id="status">
                <p>
                    <svg id="icon-status" width="1792" height="1792" viewBox="0 0 1792 1792" xmlns="http://www.w3.org/2000/svg"><path d="M1671 566q0 40-28 68l-724 724-136 136q-28 28-68 28t-68-28l-136-136-362-362q-28-28-28-68t28-68l136-136q28-28 68-28t68 28l294 295 656-657q28-28 68-28t68 28l136 136q28 28 28 68z" fill="#759E1A"/></svg>
                    Your application is ready at <span title="{{ 'now'|date('c') }}" >{{ 'now'|date('H:i') }}</span>!
                </p>
                <p>
                    <a href="https://bitbucket.org/rudz/fresh-symfony">https://bitbucket.org/rudz/fresh-symfony</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body { font: 18px sans-serif; }
        #icon-status { height: 32px; width: 32px; }
        #status a { display: inline; }
    </style>
{% endblock %}
